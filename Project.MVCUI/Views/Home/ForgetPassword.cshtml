@model AppUserVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="~/OuterTools/img/favicon.png">

    <title>Login</title>

    <link href="~/OuterTools/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/OuterTools/css/bootstrap-reset.css" rel="stylesheet">

    <link href="~/OuterTools/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />

    <link href="~/OuterTools/css/style.css" rel="stylesheet">
    <link href="~/OuterTools/css/style-responsive.css" rel="stylesheet" />

</head>
<body class="login-body">

    @TempData["Kullanici"]


    <div class="continer">

        @using (Html.BeginForm("ForgetPassword", "Home", FormMethod.Post, new { @class = "form-signin" }))
        {
            <br />
            <center><h2>Kurtarıcı Mail Hesabı Giriş</h2></center>


            <div class="login-wrap">
                @Html.TextBoxFor(x => x.AppUser.Email, new { @class = "form-control", placeholder = "Email adresinizi giriniz" })


                <br />

                <button class="btn btn-primary">Gönder</button>
                <div>
                    @Html.ActionLink("Giriş Yap", "Login", "Home")
                </div>

            </div>
        }

    </div>
</body>
</html>